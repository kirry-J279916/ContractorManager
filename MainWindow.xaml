<Window x:Class="ContractorManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ContractorManager"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <Label Content="Manage Contractors" HorizontalAlignment="Left" Margin="11,17,0,0" VerticalAlignment="Top" Width="218" FontSize="20" Height="39" />
        <TextBox x:Name="FirstNameTextBox" Text="First name" HorizontalAlignment="Left" Margin="11,61,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="218" Height="30" FontSize="15" TextChanged="FirstNameTextBox_TextChanged" />
        <TextBox x:Name="LastNameTextBox" Text="Last name" HorizontalAlignment="Left" Margin="11,100,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="218" Height="30" FontSize="15" />
        <TextBox x:Name="HourlyWageTextBox" Text="Hourly wage" HorizontalAlignment="Left" Margin="11,139,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="218" Height="30" FontSize="15" />

        <Button x:Name="AddContractorButton" Content="Add" HorizontalAlignment="Left" Margin="11,177,0,0" VerticalAlignment="Top" FontSize="20" Height="30" Width="104" Click="AddContractorButton_Click" />
        <Button x:Name="RemoveContractorButton" Content="Remove" HorizontalAlignment="Left" Margin="11,217,0,0" VerticalAlignment="Top" FontSize="20" Height="30" Width="104" />

        <Button x:Name="SearchContractorButton" Content="Search" HorizontalAlignment="Left" Margin="125,177,0,0" VerticalAlignment="Top" FontSize="20" Height="30" Width="104" />

        <ListBox x:Name="ContractorsListBox" Margin="10,289,405,10" FontSize="15" />



    </Grid>
</Window>
